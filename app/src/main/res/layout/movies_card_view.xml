<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movies_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    cardCornerRadius = "10dp"
    app:cardBackgroundColor="@android:color/holo_purple"
    android:layout_margin="5dp"
    android:layout_height="150dp"
    app:cardElevation="7dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_local_movies_black_24dp"
            android:id="@+id/img_movies"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="100dp" />

        <TextView
            android:text="Prosjek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vote_average"

            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_alignBaseline="@+id/txt_populatity"
            android:layout_alignBottom="@+id/txt_populatity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:text="Popularnost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_populatity"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignBottom="@+id/img_movies"
            android:layout_toLeftOf="@+id/txt_movies_description"
            android:layout_toStartOf="@+id/txt_movies_description" />

        <TextView
            android:text="Naslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_movies_description"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_vote_average"
            android:layout_toStartOf="@+id/txt_vote_average" />

    </RelativeLayout>

</android.support.v7.widget.CardView>